<h1>Shelter Index</h1>

<h1><%= @shelter.name %></h1>
<p>
  <%= @shelter.address %>
  <%= @shelter.city %>
  <%= @shelter.state %>
  <%= @shelter.zip %>
</p>

<a href="/shelters/<%= @shelter.id %>/edit">Edit</a><br>
<a href="/shelters">Back to Shelter List</a><br>
<%= form_tag("/shelters/#{@shelter.id}", method: :delete) do %>
  <%= submit_tag 'Delete Shelter' %>
<% end %>
