<h1>Create a new pet</h1>

<%= form_tag "/shelters/#{@shelter_id}/pets" do %>
  <%= label_tag :image %>
  <%= text_field_tag :image %>

  <%= label_tag :name %>
  <%= text_field_tag :name %>

  <%= label_tag :description %>
  <%= text_field_tag :description %>

  <%= label_tag :age %>
  <%= text_field_tag :age %>

  <%= label_tag :sex %>
  <%= text_field_tag :sex %>

  <%= text_field_tag :status, 'Adoptable', :hidden => true %>
  <%= text_field_tag :shelter_id, @shelter_id, :hidden => true %>

  <%= submit_tag "Submit" %>
<% end %>
