<p><%= image_tag @pet.image %></p>
<h1><%= @pet.name %></h1>
<p>Name: <%= @pet.name %></p>
<p>Description: <%= @pet.description.capitalize %>
<p>Age: <%= @pet.age %></p>
<p>Sex: <%= @pet.sex.first.upcase %></p>
<p>Status: <%=  @pet.status %></p>

<%= button_to 'Update Pet', "/pets/#{@pet.id}/edit", method: :get %>
<%= button_to 'Delete Pet', "/pets/#{@pet.id}", method: :delete %>
